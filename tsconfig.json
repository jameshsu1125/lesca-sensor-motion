{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./lib/",
    "target": "es5",
    "module": "AMD",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitThis": false,
    "paths": {
      "*": ["./lib/*"]
    }
  },
  "include": ["src/lib"]
}
